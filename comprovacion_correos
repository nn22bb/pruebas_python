while True:
    try:
        correo = input("Introduce un correo (o escribe 'salir' para terminar): ")
    except EOFError:
        print("\nğŸ“´ Entrada finalizada inesperadamente.")
        break

    if not correo:
        print("âš ï¸ No escribiste nada. Intenta de nuevo.")
        continue

    if correo.lower() == "salir":
        break

    if re.match(patron_email, correo):
        print("âœ… VÃ¡lido")
    else:
        print("âŒ InvÃ¡lido")