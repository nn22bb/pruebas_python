import re

patron_email = r"^[a-zA-Z0-9._+-]+@[a-zA-Z0-9-]+\.[a-zA-Z0-9-.]+$"

while True:
    try:
        correo = input("Introduce un correo (o escribe 'salir' para terminar): ")
    except EOFError:
        print("\n📴 Entrada finalizada inesperadamente.")
        break

    if not correo:
        print("⚠️ No escribiste nada. Intenta de nuevo.")
        continue

    if correo.lower() == "salir":
        break

    if re.match(patron_email, correo):
        print("✅ Válido")
    else:
        print("❌ Inválido")